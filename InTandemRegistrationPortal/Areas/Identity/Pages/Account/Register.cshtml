@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">

    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <!--use placeholder attribute like so: placeholder="Enter first name"-->
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName" class="control-label"></label>
                <input asp-for="Input.FirstName" class = "form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName" class="control-label"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="control-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>


            <br />

            <div class="form-group">
                <label asp-for="Input.Role" class="control-label"></label>
                <select asp-for="Input.Role" asp-items="Model.Roles" class="form-control" id="RoleDropdown">
                    <option value="" selected disabled>Select Type of User</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Input.HasSingleBike" class="control-label"></label>
                <select asp-for="Input.HasSingleBike" class="form-control">
                    <option value="" selected disabled>Select Yes or No</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Input.HasSingleBike" class="text-danger"></span>
            </div>
            <!--fields are assigned classes based on divs to allow JS to work-->
            <div id="captain_stoker">
                <div class="form-group">
                    <label asp-for="Input.Height" class="control-label"></label>
                    <input asp-for="Input.Height" class="form-control CaptainStokerField" />
                    <span asp-validation-for="Input.Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Weight" class="control-label"></label>
                    <input asp-for="Input.Weight" class="form-control CaptainStokerField" />
                    <span asp-validation-for="Input.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.HasBeenTrained" class="control-label"></label>
                    <select asp-for="Input.HasBeenTrained" class="form-control CaptainStokerField">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="Input.HasSeat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.HasSeat" class="control-label"></label>
                    <select asp-for="Input.HasSeat" class="form-control CaptainStokerField">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="Input.HasSeat" class="text-danger"></span>
                </div>
            </div>
            <div id="captain">
                <div class="form-group">
                    <label asp-for="Input.FromNYCares" class="control-label"></label>
                    <select asp-for="Input.FromNYCares" class="form-control CaptainField">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="Input.HasTandem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.HasTandem" class="control-label"></label>
                    <select asp-for="Input.HasTandem" class="form-control CaptainField">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="Input.HasTandem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.RiderLevel" class="control-label"></label>
                    <input asp-for="Input.RiderLevel" class="form-control CaptainField" />
                    <span asp-validation-for="Input.HasTandem" class="text-danger"></span>
                </div>
            </div>
            <div id="stoker">
                <div class="form-group">
                    <label asp-for="Input.Dog" class="control-label"></label>
                    <select asp-for="Input.Dog" class="form-control StokerField">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>                    
                    <span asp-validation-for="Input.Dog" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.SpecialEquipment" class="control-label"></label>
                    <input asp-for="Input.SpecialEquipment" class="form-control StokerField" />
                    <span asp-validation-for="Input.SpecialEquipment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName" class="control-label"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email" class="control-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="control-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/manageProfile.js" asp-append-version="true"></script>
}
