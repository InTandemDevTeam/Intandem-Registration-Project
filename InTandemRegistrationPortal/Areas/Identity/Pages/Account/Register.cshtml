@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <script src="~/js/register.js" asp-append-version="true"></script>

    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <!--use placeholder attribute like so: placeholder="Enter first name"-->
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class = "form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DateOfBirth"></label>
                <input asp-for="Input.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <select asp-for="Input.Role" class="form-control" id="RoleDropdown" onchange="templating()">
                    <option value="" selected disabled>Select Type of User</option>
                    <option value="Captain">Captain</option>
                    <option value="Stoker">Stoker</option>
                    <option value="Volunteer">Volunteer</option>
                </select>
            </div>
            <br />
            <!-- only required fields below are assigned ids to their spans-->
            <div id="captain_stoker">
                <div class="form-group">
                    <label asp-for="Input.Height"></label>
                    <input asp-for="Input.Height" class="form-control" />
                    <span asp-validation-for="Input.Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Weight"></label>
                    <input asp-for="Input.Weight" class="form-control user-field" />
                    <span asp-validation-for="Input.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.HasSeat"></label>
                    <select asp-for="Input.HasSeat" class="form-control">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                    <span asp-validation-for="Input.HasSeat" class="text-danger"></span>
                </div>
            </div>
            <div id="captain">
                <div class="form-group">
                    <label asp-for="Input.HasTandem"></label>
                    <select asp-for="Input.HasTandem" class="form-control">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                    <span asp-validation-for="Input.HasTandem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.HasSingleBike"></label>
                    <select asp-for="Input.HasSingleBike" class="form-control">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                    <span asp-validation-for="Input.HasSingleBike" class="text-danger"></span>
                </div>
            </div>
            <div id="stoker">
                <div class="form-group">
                    <label asp-for="Input.Dog"></label>
                    <select asp-for="Input.Dog" class="form-control">
                        <option value="" selected disabled>Select Yes or No</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>                    
                    <span asp-validation-for="Input.Dog" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.SpecialEquipment"></label>
                    <input asp-for="Input.SpecialEquipment" class="form-control" />
                    <span asp-validation-for="Input.SpecialEquipment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
