            </div>
            <div class="form-group">
                <label asp-for="RideEvent.Location" class="control-label"></label>
                <input asp-for="RideEvent.Location" class="form-control" />
                <span asp-validation-for="RideEvent.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RideEvent.Distance" class="control-label"></label>
                <input asp-for="RideEvent.Distance" class="form-control" />
