            <div class="form-group">
                <label asp-for="RideEvent.MaxSignUpType" class="control-label"></label>
                <input asp-for="RideEvent.MaxSignUpType" class="form-control" />
                <span asp-validation-for="RideEvent.MaxSignUpType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RideEvent.Status" class="control-label"></label>
                <input asp-for="RideEvent.Status" class="form-control" />
                <span asp-validation-for="RideEvent.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

