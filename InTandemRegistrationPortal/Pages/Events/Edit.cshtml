    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>RideEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RideEvent.ID" />
            <div class="form-group">
                <label asp-for="RideEvent.EventName" class="control-label"></label>
                <input asp-for="RideEvent.EventName" class="form-control" />
                <span asp-validation-for="RideEvent.EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RideEvent.EventDate" class="control-label"></label>
                <input asp-for="RideEvent.EventDate" class="form-control" />
                <span asp-validation-for="RideEvent.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RideEvent.Description" class="control-label"></label>
                <input asp-for="RideEvent.Description" class="form-control" />
                <span asp-validation-for="RideEvent.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RideEvent.Location" class="control-label"></label>
                <input asp-for="RideEvent.Location" class="form-control" />
                <span asp-validation-for="RideEvent.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RideEvent.Distance" class="control-label"></label>
                <input asp-for="RideEvent.Distance" class="form-control" />
                <span asp-validation-for="RideEvent.Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RideEvent.EventType" class="control-label"></label>
                <input asp-for="RideEvent.EventType" class="form-control" />
                <span asp-validation-for="RideEvent.EventType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="sr-only">Needs fixing, Below is a dropdown with multiple values selected</label>
                <label asp-for="Input.SelectedUser" class="control-label"></label>
                <select multiple="multiple" asp-for="Input.SelectedUser" asp-items="Model.Users" class="form-control">
                    <option value="" disabled>Select User</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="RideEvent.MaxSignup" class="control-label"></label>
                <input asp-for="RideEvent.MaxSignup" class="form-control" />
