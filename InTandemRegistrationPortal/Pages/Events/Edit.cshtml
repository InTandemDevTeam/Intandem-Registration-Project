                <label asp-for="RideEvent.MaxSignup" class="control-label"></label>
                <input asp-for="RideEvent.MaxSignup" class="form-control" />
                <span asp-validation-for="RideEvent.MaxSignup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SelectedMaxSignUpType" class="control-label"></label>
                <select asp-for="Input.SelectedMaxSignUpType" asp-items="Model.MaxSignUpTypes" class="form-control" id="RoleDropdown">
                    <option value="" selected disabled>Select limiting factor for sign ups</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.SelectedStatus" class="control-label"></label>
                <select asp-for="Input.SelectedStatus" asp-items="Model.Statuses" class="form-control">
                    <option value="" selected disabled>Select status of event</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
