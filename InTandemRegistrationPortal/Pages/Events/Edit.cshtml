            </div>
            <div class="form-group">
                <label asp-for="Input.SelectedEventType" class="control-label"></label>

                <select asp-for="Input.SelectedEventType" asp-items="Model.EventTypes" class="form-control" id="RoleDropdown">
                    <option value="" selected disabled>Select Type of Event</option>
