@model InTandemRegistrationPortal.Pages.Events.EventWizard2Model
@{
    ViewData["Title"] = "EventWizard2";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.SelectedUser" class="control-label"></label>
                <select multiple="multiple" asp-for="Input.SelectedUser" asp-items="Model.Users" class="form-control">
                    <option value="" selected disabled>Select User</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="EventWizard2.MaxSignup" class="control-label"></label>
                <input asp-for="EventWizard2.MaxSignup" class="form-control" />
                <span asp-validation-for="EventWizard2.MaxSignup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventWizard2.MaxSignUpType" class="control-label"></label>
                <input asp-for="EventWizard2.MaxSignUpType" class="form-control" />
                <span asp-validation-for="EventWizard2.MaxSignUpType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventWizard2.Status" class="control-label"></label>
                <input asp-for="EventWizard2.Status" class="form-control" />
                <span asp-validation-for="EventWizard2.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Previous" asp-page-handler="Previous" formnovalidate="formnovalidate" class="btn btn-default" />
            </div>
            <div class="form-group">
                <input type="submit" value="Next" asp-page-handler="Next" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

