@page "{id}"
@model InTandemRegistrationPortal.Pages.Admin.UserInformationModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<dl class="row">
    <dt class="col-sm-2">
        Full Name
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FullName)
    </dd>
    <dt class="col-sm-2">
        Date Registered
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.InTandemUser.DateRegistered)
    </dd>
    <dt class="col-sm-2">
        Role
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.InTandemUser.Role)
    </dd>
    <dt class="col-sm-2">
        Email
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.InTandemUser.Email)
    </dd>

    @if ((Model.InTandemUser.Role == "Captain") ||
       (Model.InTandemUser.Role == "Stoker"))
    {
        <dt class="col-sm-2">
            Height
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InTandemUser.Height)
        </dd>
        <dt class="col-sm-2">
            Weight
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InTandemUser.Weight)
        </dd>
        <dt class="col-sm-2">
            Has Seat?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InTandemUser.HasSeat)
        </dd>
        @if (Model.InTandemUser.Role == "Stoker")
        {
            <dt class="col-sm-2">
                Do you have a guide dog?
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InTandemUser.Dog)
            </dd>
            <dt class="col-sm-2">
                Do you have any special equipment?
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InTandemUser.SpecialEquipment)
            </dd>
        }
        @if (Model.InTandemUser.Role == "Captain")
        {
            <dt class="col-sm-2">
                Do you have your own tandem bike?
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InTandemUser.HasTandem)
            </dd>
            <dt class="col-sm-2">
                Do you have your own single bike?
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InTandemUser.HasSingleBike)
            </dd>
        }
    }

</dl>

