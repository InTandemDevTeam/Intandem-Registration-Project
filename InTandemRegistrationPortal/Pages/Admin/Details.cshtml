@page "{id}"
@model InTandemRegistrationPortal.Pages.Admin.DetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InTandemUser.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InTandemUser.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InTandemUser.DateRegistered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InTandemUser.DateRegistered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InTandemUser.Email)

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InTandemUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InTandemUser.Role)

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InTandemUser.Role)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InTandemUser.HasSingleBike)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InTandemUser.HasSingleBike)
        </dd>
        @if ((Model.InTandemUser.Role == "Captain") ||
          (Model.InTandemUser.Role == "Stoker"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InTandemUser.Height)

            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InTandemUser.Height)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InTandemUser.Weight)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InTandemUser.Weight)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InTandemUser.HasSeat)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InTandemUser.HasSeat)
            </dd>            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InTandemUser.HasBeenTrained)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InTandemUser.HasBeenTrained)
            </dd>
            @if (Model.InTandemUser.Role == "Stoker")
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InTandemUser.Dog)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InTandemUser.Dog)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InTandemUser.SpecialEquipment)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InTandemUser.SpecialEquipment)
                </dd>
            }
            @if (Model.InTandemUser.Role == "Captain")
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InTandemUser.HasTandem)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InTandemUser.HasTandem)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InTandemUser.FromNYCares)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InTandemUser.FromNYCares)
                </dd>

            }
        }

    </dl>
    @if(Model.InTandemUser.HasBeenApproved == null)
    {
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Yes" asp-page-handler="Yes" asp-route-id="@Model.InTandemUser.Id" class="btn btn-success" />
                <input type="submit" value="No" asp-page-handler="No" class="btn btn-danger" />
            </div>
        </form>
    }
    <a asp-page="./Users" asp-route-id="">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}