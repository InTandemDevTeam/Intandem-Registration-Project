<!-- imports and injection needed for razor code below-->
@using Microsoft.AspNetCore.Identity
@using InTandemRegistrationPortal.Models;
@inject SignInManager<InTandemUser> SignInManager
@inject UserManager<InTandemUser> UserManager

    <ul class="navbar-nav">

        @if (SignInManager.IsSignedIn(User))
        {
            var u = await UserManager.GetUserAsync(User);

            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello <b>@u.UserName</b></a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
